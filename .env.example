# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme-secure-password
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=changeme-db-password

# PostgreSQL Configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=changeme-db-password

# Application Configuration
PROJECT_REALM=project-realm
PROJECT_DOMAIN=localhost
PROJECT_WEB_CLIENT_ID=project-web
PROJECT_BACKEND_CLIENT_ID=project-backend
PROJECT_MOBILE_CLIENT_ID=project-mobile

# SMTP Configuration (for production)
KC_SMTP_HOST=smtp.gmail.com
KC_SMTP_PORT=587
KC_SMTP_FROM=noreply@yourproject.com
KC_SMTP_AUTH=true
KC_SMTP_USER=your-smtp-username
KC_SMTP_PASSWORD=your-smtp-password

# URLs
KEYCLOAK_URL=http://localhost:8080
MAILHOG_URL=http://localhost:8025

# Secrets (generate strong values for production)
PROJECT_BACKEND_CLIENT_SECRET=changeme-backend-client-secret
JWT_SECRET=changeme-jwt-secret-32-chars-min

# Multi-tenant settings (optional)
ENABLE_MULTI_TENANT=false
DEFAULT_TENANT=main